#include <iostream>

using namespace std;

int main()
{
    int n, x, y, kolom, baris;
    int data[100][100];
    
    n = 1;
    
    cout << "===============================================" << endl;
    cout << "                    MATRIX                     " << endl;
    cout << "===============================================" << endl;
    
    cout << endl;
    
    cout << "Masukan Jumlah Baris = ";
    cin >> x;
    
    cout << "Masukan Jumlah Kolom = ";
    cin >> y;
    
    cout << endl;
    
    for(int i = 0; i < x; i++){
        for(int j = 0; j < y; j++){
            cout << n;
            data[i][j] = n;
            n++;
        }
        
        cout << endl;
        
    }
    
    cout << endl;
    
    cout << "Masukan Kolom : ";
    cin >> kolom;
    cout << "Masukan Baris : ";
    cin >> baris;
    
    cout << endl;
    
    cout << "Nilai Yang terdapat pada baris ke-" << baris << " dan kolom ke-" << kolom << " adalah = ";
    cout << data[baris - 1][kolom - 1];

    return 0;
}
